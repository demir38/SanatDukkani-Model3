@using Sanat.MvcWebUI.Models;
@model IEnumerable<ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container pb-5">
    <div class="row">

        <div class="col-md-3">

           @Html.Action("GetCategories","Home")

        </div>
        <div class="col-md-9">
            @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fa fa-exclamation" data-unicode="f12a"></i>
            Bu Katagoride Bir Ürün Bulınamadı!!
        </div>

          }
            else

          {
        <div class="alert alert-primary" role="alert">
            <i class="fa fa-check-square-o" data-unicode="f046"></i>
            <Strong>@Model.Count() adet </Strong> Ürün Bulundu.
        </div>
                 }

            @Html.Partial("_ProductList", Model)

        </div>

    </div>
</div>
